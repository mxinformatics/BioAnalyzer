@rendermode InteractiveServer

@if (_literatureReference != null)
{
        if (Abstract == null)
        {
                <p><em>...Loading</em></p>
        }
        else
        {
                <div class="modal fade show d-block" id="abstractModal" tabindex="-1">
                        <div class="modal-dialog">
                                <div class="modal-content">
                                        <div class="modal-header">
                                                <h5 class="modal-title" id="titleLabel">Abstract View</h5>
                                                <button type="button" class="close btn btn-lg" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                </button>
                                        </div>
                                        <div class="modal-body">
                                                <div class="row">
                                                        <strong>@Abstract.Title</strong>
                                                </div>
                                                <div>
                                                        @Abstract.Description
                                                </div>
                                        </div>
                                        <button type="button" class="btn btn-outline-primary" @onclick="@Close">Close</button>        
                                </div>
                        </div>
          
                </div>        
        }
        
        
}
